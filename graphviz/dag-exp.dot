digraph dag {
    ordering = out;
    node[shape=none];
    p1[label="+"];
    p2[label="+"];
    mp1[label="*"];
    mp2[label="*"];
    mn[label="-"];
    a[label="a"];
    b[label="b"];
    c[label="c"];

    p1 -> p2;
    p1 -> mp2;

    p2 -> a;
    p2 -> mp1;
    
    mp1 -> mn;
    mp2 -> mn;
    mp2 -> d;

    mn -> b;
    mn -> c;

    { rank=same; p2 mp2};
    { rank=same; a mn d};
}